<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>
    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/backgroundscreen</item>
        <item name="android:dropDownSpinnerStyle">@color/backgroundscreen</item>
    </style>
    



    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
    <!-- Change the background color -->
    <item name="android:background">@drawable/etnumbers</item>
    <!-- Change the arrow icon -->
    <item name="android:popupBackground">@drawable/spinner</item>

    <!-- Change the text appearance -->

    <item name="android:textColor">@color/black</item>

    <item name="android:text">@color/black</item>
    <item name="android:textAppearance">@color/black</item>

    <item name="android:textColorHint">@color/black</item>
    <item name="android:textViewStyle">@color/black</item>
    </style>


    <style name="NumberPickerStyle" parent="android:Widget.Material.NumberPicker">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/backgroundscreen</item>
    </style>

    <style name="CustomSpinnerTextAppearance" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <!-- Customize the text appearance -->
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>
        <!-- Add more customizations if needed -->
    </style>
    <style name="CustomSpinnerTextAppearance.s" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="CustomRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/orange</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>
